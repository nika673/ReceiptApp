<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_receipt"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:layout_gravity="center"

            app:shapeAppearanceOverlay="@style/roundedRectangle"
            android:visibility='visible'
            android:layout_marginHorizontal="@dimen/image_marginH"
            android:layout_marginVertical="@dimen/image_marginV"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_text_height"
            android:layout_marginHorizontal="@dimen/text1_marginH"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/neutral_black"
            android:textSize="@dimen/text1_size"
            tools:text="Oreo Milkshake" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_text_height"
            android:layout_marginVertical="@dimen/text2_marginV"
            android:layout_marginStart="@dimen/text2_marginS"
            android:drawablePadding="@dimen/text2_drawablePadding"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:textSize="@dimen/text2_size"
            app:drawableStartCompat="@drawable/ic_basket"
            tools:text="4 ingredients" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/text1_marginH"
            android:layout_marginBottom="@dimen/text3_marginB"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/neutral_black"
            android:textSize="@dimen/text2_size"
            tools:text="Making a milkshake is honestly as simple as blending 4 ingredients! A generous portion of ice cream, a splash of milk and some flavoring. The best ice cream is to use is full cream, full-fat ice cream because thatâ€™s where the flavor is! " />


        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_text_height"
            android:layout_marginStart="@dimen/text4_marginS"
            android:layout_marginBottom="@dimen/text4_marginB"
            android:autoLink="all"
            android:drawablePadding="@dimen/text4_drawablePadding"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="@string/youtube"
            android:textColor="@color/youtube_gray"
            android:textSize="@dimen/text2_size"
            app:drawableStartCompat="@drawable/youtube" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_text_height"
            android:layout_marginHorizontal="@dimen/text1_marginH"
            android:layout_marginBottom="@dimen/text5_marginB"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/ingredients"
            android:textColor="@color/neutral_black"
            android:textSize="@dimen/text5_size" />


        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/linear3_marginS"
            android:layout_marginEnd="@dimen/linear3_marginE"
            android:layout_marginBottom="@dimen/linear3_marginB"
            android:orientation="vertical">

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>