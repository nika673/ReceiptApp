<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card2_marginH"
    android:layout_marginBottom="@dimen/card2_marginB"
    app:cardCornerRadius="@dimen/card2_radius"
    tools:layout_marginTop="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:background="@color/teal_700">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/linear22_marginS"
            android:layout_marginTop="@dimen/linear22_marginT"
            android:layout_marginEnd="@dimen/linear22_marginE"
            android:layout_weight="0.5"
            android:orientation="vertical"
            tools:background="@color/white">

            <TextView
                android:id="@+id/text21"
                android:layout_width="@dimen/text2122_width"
                android:layout_height="@dimen/text21_height"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:textColor="@color/blue"
                android:textSize="@dimen/text21_size"
                tools:text="Breakfast" />

            <TextView
                android:id="@+id/text22"
                android:layout_width="@dimen/text2122_width"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/neutral_black"
                android:textSize="@dimen/text22_size"
                tools:text="Avocado Toast" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            tools:background="@color/teal_200">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/backgrounds/scenic" />
        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>